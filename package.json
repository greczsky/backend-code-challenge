{
  "name": "pokemon-app",
  "version": "1.0.0",
  "description": "Pokemon application",
  "author": "Martin Gregor",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build && npm run copy-docs",
    "copy-docs": "mkdir -p ./dist/docs/ && cp ./docs/* ./dist/docs",
    "format": "prettier --write \"{src,apps,libs,tests,scripts}/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "start:prod:migrations": "node dist/scripts/run-migrations",
    "get-swagger": "node dist/scripts/get-open-api-bundle",
    "lint": "eslint --config ./.eslintrc.js .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:it": "./scripts/run-it-tests.sh",
    "test:it:debug": "./scripts/run-it-tests.sh -d",
    "test:e2e": "jest --config ./tests/e2e/jest-e2e.json --runInBand",
    "typeorm": "typeorm-ts-node-commonjs",
    "typeorm:local": "typeorm-ts-node-commonjs -d ./local/data-source.ts",
    "prepare": "is-ci || husky install",
    "reinstall": "rm -f package-lock.json && rm -rf node_modules && npm i"
  },
  "dependencies": {
    "@jridgewell/sourcemap-codec": "1.4.14",
    "@nestjs/common": "9.3.12",
    "@nestjs/config": "2.3.1",
    "@nestjs/core": "9.3.12",
    "@nestjs/platform-express": "9.3.12",
    "@nestjs/swagger": "6.2.1",
    "@nestjs/terminus": "9.2.1",
    "@nestjs/typeorm": "9.0.1",
    "ajv": "8.12.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "dotenv": "16.0.3",
    "pg": "8.10.0",
    "prom-client": "14.2.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "4.4.1",
    "rxjs": "7.8.0",
    "typeorm": "0.3.17",
    "uuid": "9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.5.0",
    "@commitlint/config-conventional": "17.4.4",
    "@nestjs/cli": "9.3.0",
    "@nestjs/schematics": "9.0.4",
    "@nestjs/testing": "9.3.12",
    "@types/express": "4.17.17",
    "@types/jest": "29.5.0",
    "@types/node": "18.15.5",
    "@types/supertest": "2.0.12",
    "@types/uuid": "9.0.1",
    "@typescript-eslint/eslint-plugin": "5.59.8",
    "@typescript-eslint/parser": "5.59.8",
    "commitlint-plugin-function-rules": "1.7.1",
    "constructs": "10.1.288",
    "eslint": "8.41.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-import-resolver-typescript": "3.6.0",
    "eslint-plugin-deprecation": "1.4.1",
    "eslint-plugin-disable": "2.0.3",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-unused-imports": "2.0.0",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "jest": "29.5.0",
    "jest-ts-auto-mock": "2.1.0",
    "prettier": "2.8.8",
    "sqlite3": "5.1.6",
    "supertest": "6.3.3",
    "ts-auto-mock": "3.6.4",
    "ts-jest": "29.0.5",
    "ts-loader": "9.4.2",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.2",
    "ttypescript": "1.5.15",
    "typescript": "4.9.5"
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "moduleNameMapper": {
      "src/(.*)": "<rootDir>/$1"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "setupFiles": [
      "../config.ts"
    ],
    "globals": {
      "ts-jest": {
        "compiler": "ttypescript"
      }
    }
  }
}
