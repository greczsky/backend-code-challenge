{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "plugins": [{ "transform": "ts-auto-mock/transformer", "cacheBetweenTests": false }]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "tests/**/*.js",
    "scripts/**/*.ts",
    "config/**/*.ts",
    "local/**/*.ts",
    "*.ts",
    "*.js"
  ],
  "exclude": ["*.spec.ts", "dist", "node_modules"]
}
